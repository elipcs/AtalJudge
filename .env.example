# Backend Database Configuration (separate from Judge0)
DB_HOST=backend-db
DB_PORT=5432
DB_USERNAME=ataljudge
DB_PASSWORD=ataljudge_password
DB_DATABASE=ataljudge
DATABASE_URL=

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Security Keys (REQUIRED in production - generate strong random strings)
# Generate with: openssl rand -base64 48
SECRET_KEY=your-secret-key-here-minimum-32-characters
JWT_SECRET=your-jwt-secret-here-minimum-32-characters

# Google Gemini API (Google AI Studio - primary option)
# Get your free API key at: https://ai.google.dev/
GEMINI_API_KEY=your-google-api-key-here
GEMINI_MODEL=gemini-3-pro-preview
GEMINI_FALLBACK_API_KEY=

# Vertex AI Configuration (optional, for production - more stable)
# Set to true to use Vertex AI instead of Google AI Studio
USE_VERTEX_AI=false
VERTEX_AI_PROJECT_ID=your-gcp-project-id
VERTEX_AI_LOCATION=us-central1

# Judge0 Database (change these in production!)
JUDGE0_DB_USER=judge0
JUDGE0_DB_PASSWORD=change_me_in_production
JUDGE0_DB_NAME=judge0

# Test Case Manager Settings
CODE_TIMEOUT_SECONDS=5
MAX_TEST_CASES=50

# Docker container limits (in MB)
FRONTEND_MEM_LIMIT=512m
BACKEND_MEM_LIMIT=512m
TEST_CASE_MANAGER_MEM_LIMIT=512m
JUDGE0_SERVER_MEM_LIMIT=1024m
JUDGE0_WORKER_MEM_LIMIT=1024m
JUDGE0_DB_MEM_LIMIT=512m
JUDGE0_REDIS_MEM_LIMIT=256m

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Security
ENABLE_CORS_PREFLIGHT=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Frontend Configuration
# Use the public IP or domain where the backend is accessible
NEXT_PUBLIC_API_URL=http://localhost:3333

# Optional: Frontend URL for CORS
FRONTEND_URL=http://localhost:3000
ALLOWED_ORIGINS=http://localhost:3000

# Optional: Email Configuration
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@ataljudge.com
