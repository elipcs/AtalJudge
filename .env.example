# Backend Configuration
PORT=3333
NODE_ENV=development
SECRET_KEY=change_this_secret_key_in_production
JWT_SECRET=change_this_jwt_secret_in_production
ALLOWED_ORIGINS=*

# Database Configuration
# Use 'localhost' when running locally without docker-compose for the app
# Use 'backend-db' when running inside docker-compose
DB_HOST=backend-db
DB_PORT=5432
DB_USERNAME=ataljudge
DB_PASSWORD=ataljudge_password
DB_DATABASE=ataljudge

# Redis Configuration
REDIS_HOST=backend-redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Email Configuration (SMTP)
MAIL_HOST=smtp.ethereal.email
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_FROM=noreply@ataljudge.com

# Judge0 Configuration
# Use 'http://localhost:2358' when running locally without docker-compose for the app
# Use 'http://judge0-server:2358' when running inside docker-compose
JUDGE0_URL=http://judge0-server:2358
JUDGE0_API_KEY=
JUDGE0_RAPID_API_KEY=

# Local Judge0 Services Configuration
JUDGE0_DB_USER=judge0
JUDGE0_DB_PASSWORD=judge0password
JUDGE0_DB_NAME=judge0
JUDGE0_REDIS_PASSWORD=judge0redis

# Test Case Manager
TEST_CASE_MANAGER_API_URL=http://localhost:8000
TEST_CASE_MANAGER_TIMEOUT=600000

# Limits
MAX_CODE_SIZE_KB=200
MAX_INPUT_SIZE_KB=64
MAX_OUTPUT_SIZE_KB=64
MAX_TEST_CASES_PER_QUESTION=100
DEFAULT_CPU_TIME_LIMIT=2.0
DEFAULT_WALL_TIME_LIMIT=5.0
DEFAULT_MEMORY_LIMIT_KB=262144
MAX_SUBMISSIONS_PER_MINUTE=5
